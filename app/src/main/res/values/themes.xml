<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/colorOnBackground</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="backgroundColor">@color/backgroundColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColor</item>
    </style>

    <style name="Theme.TestProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TestProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TestProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>