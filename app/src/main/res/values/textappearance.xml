<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.POK.Title" parent="">
        <item name="android:fontFamily">@font/extra_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextAppearance.POK.Title.2" parent="TextAppearance.POK.Title">
        <item name="android:textSize">@dimen/text_title_2</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextAppearance.POK.Body" parent="">
        <item name="android:fontFamily">@font/semi_bold</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.POK.Body.Bold" parent="TextAppearance.POK.Body">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextAppearance.POK.Body.Black" parent="TextAppearance.POK.Body">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextAppearance.POK.Body.Black.Bold" parent="TextAppearance.POK.Body.Black">
        <item name="android:fontFamily">@font/extra_bold</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="TextAppearance.POK.Subtitle" parent="TextAppearance.POK.Body">
        <item name="android:fontFamily">@font/extra_bold</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>